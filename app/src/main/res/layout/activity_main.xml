<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulir Pendaftaran Mahasiswa Baru  "
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:id="@+id/et_nomor_pendaftaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor Pendaftaran"
        android:inputType="number" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Calon Mahasiswa"
        android:id="@+id/et_nama_mhs"
        android:inputType="text"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="jenis kelamin"
        android:textSize="19sp" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg_jk"
        android:orientation="horizontal"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="laki laki"
        android:id="@+id/rg_jk_l"
        android:checked="true"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="perempuan"
        android:id="@+id/rg_jk_p"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="daftar"
        android:id="@+id/btn_daftar"
        android:layout_margin="32dp"/>


</LinearLayout>